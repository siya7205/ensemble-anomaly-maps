<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Ensemble Anomaly Maps</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>
    body { font-family: system-ui, -apple-system, sans-serif; margin: 20px; }
    header { display:flex; gap:16px; align-items:center; }
    #viewer { width: 100%; height: 480px; border: 1px solid #ddd; margin-top: 12px; }
    table { border-collapse: collapse; margin-top: 12px; width: 100%; }
    th, td { border: 1px solid #ddd; padding: 6px 8px; text-align: left; }
    tr:hover { background: #f7f7f7; cursor: pointer; }
    .row { display:flex; gap:16px; align-items:center; flex-wrap: wrap; }
    .mono { font-family: ui-monospace, SFMono-Regular, Menlo, monospace; }
  </style>
  <!-- 3Dmol from CDN -->
  <script src="https://3dmol.org/build/3Dmol.js"></script>
</head>
<body>
  <header>
    <h2 style="margin:0">Ensemble Anomaly Maps</h2>
    <a class="mono" href="/rama" target="_blank">View Ramachandran â†’</a>
  </header>

  <div class="row" style="margin-top:12px">
    <input id="pdbFile" type="file" accept=".pdb" />
    <button id="runBtn">Run analysis</button>
    <span id="status" class="mono"></span>
  </div>

  <div id="viewer"></div>

  <h3 style="margin-top:16px">Top anomalies</h3>
  <button id="refreshTop">Refresh</button>
  <table id="anomTable">
    <thead>
      <tr><th>resid</th><th>mean_if</th><th>% disallowed</th><th>n_frames</th></tr>
    </thead>
    <tbody></tbody>
  </table>

  <script src="/static/js/main.js"></script>
</body>
</html>
